{
  "manifest_version": 3,
  "name": "TextBoost AI",
  "version": "1.0.0",
  "description": "Right-click in any editable field to rewrite, summarize, or expand text using AI.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://openrouter.ai/api/*",
    "https://api.openai.com/*",
    "https://api.deepseek.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "ai-quick-rewrite": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Quick rewrite (clarify & fix grammar)"
    },
    "ai-quick-rewrite-alt": {
      "suggested_key": {
        "default": "Alt+Shift+Q",
        "mac": "Option+Shift+Q"
      },
      "description": "Quick rewrite (Alt+Shift+Q)"
    },
    "ai-summarize": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Summarize"
    },
    "ai-expand": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Write in detail"
    }
  }
}
